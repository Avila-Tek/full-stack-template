{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "API",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "esnext"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "src",
    "incremental": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": false,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "inlineSources": true,
    "noEmitHelpers": true,
    "importHelpers": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
