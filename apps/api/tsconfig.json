{
  "extends": "@avila-tek/tsconfig/api.json",
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "sourceRoot": "/",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "typeRoots": ["./src/types/*", "./node_modules/@types/*"]
  }
}
