{
  "name": "avilatek-api-template",
  "version": "1.0.0",
  "description": "...",
  "scripts": {
    "dev": "npm run build-ts && npm run watch",
    "start": "npm run serve",
    "build": "npm run build-ts && npm run lint",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc -b",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "repository": {
    "type": "git",
    "url": "none"
  },
  "keywords": [
    "typescript",
    "express",
    "graphql",
    "apollo"
  ],
  "author": "Jose Roberto Quevedo <jose@avilatek.dev>",
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "^5.27.2",
    "@sentry/tracing": "^5.27.2",
    "apollo-server": "^2.19.0",
    "apollo-server-express": "^2.19.0",
    "apollo-server-plugin-base": "^0.10.2",
    "axios": "^0.21.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "browser-detect": "^0.2.28",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "csvtojson": "^2.0.10",
    "dayjs": "^1.9.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "graphql": "^15.4.0",
    "graphql-compose": "^7.22.1",
    "graphql-compose-connection": "^8.0.1",
    "graphql-compose-mongoose": "^9.0.0",
    "graphql-middleware": "^4.0.2",
    "graphql-tools": "^7.0.1",
    "helmet": "^4.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.11",
    "mongoose-auto-increment": "^5.0.1",
    "morgan": "^1.10.0",
    "node-cron": "^2.0.3",
    "postmark": "^2.6.0",
    "sanitize-html": "^2.1.1",
    "slugs": "^0.1.3",
    "uuid": "^8.3.1",
    "xlsx": "^0.16.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/helmet": "0.0.48",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.37",
    "@types/mongoose-auto-increment": "^5.0.33",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.6",
    "@types/node-cron": "^2.0.3",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.12.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "typescript": "^4.0.5"
  }
}
