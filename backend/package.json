    "@types/express": "^4.17.13",
    "@types/helmet": "0.0.48",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.15",
    "@types/node-cron": "^3.0.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
