{
  "name": "@avila-tek/backend",
  "version": "3.0.0",
  "description": "...",
  "scripts": {
    "dev": "npm run build-ts && npm run watch",
    "start": "npm run serve",
    "build": "npm run build-ts && npm run lint",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc -b",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "repository": {
    "type": "git",
    "url": "none"
  },
  "keywords": [
    "typescript",
    "express",
    "graphql",
    "apollo"
  ],
  "author": "Jose Roberto Quevedo <jose@avilatek.dev>",
  "license": "MIT",
  "dependencies": {
    "@sentry/integrations": "^7.12.1",
    "@sentry/node": "^7.12.1",
    "@sentry/tracing": "^7.12.1",
    "apollo-server": "^3.10.2",
    "apollo-server-core": "^3.10.2",
    "apollo-server-errors": "^3.3.1",
    "apollo-server-express": "^3.10.2",
    "apollo-server-plugin-base": "^3.6.2",
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.0",
    "browser-detect": "^0.2.28",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csvtojson": "^2.0.10",
    "dayjs": "^1.11.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "express-validator": "^6.14.2",
    "graphql": "^16.6.0",
    "graphql-compose": "^9.0.9",
    "graphql-compose-connection": "^8.2.1",
    "graphql-compose-mongoose": "^9.7.1",
    "graphql-tools": "^8.3.5",
    "helmet": "^6.0.0",
